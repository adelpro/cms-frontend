{
  "name": "@itqan/cms-frontend",
  "version": "1.0.0",
  "description": "Quranic Content Management System - Frontend application for managing and distributing Quranic assets",
  "author": "Itqan Community",
  "license": "MIT",
  "homepage": "https://github.com/Itqan-community/cms-frontend#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Itqan-community/cms-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/Itqan-community/cms-frontend/issues"
  },
  "keywords": [
    "quran",
    "quranic",
    "islamic",
    "cms",
    "content-management",
    "angular",
    "typescript",
    "open-source"
  ],
  "scripts": {
    "start": "ng serve",
    "build": "ng build --configuration production",
    "build:production": "ng build --configuration production",
    "build:staging": "ng build --configuration staging",
    "build:develop": "ng build --configuration develop",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,html,css,less,md}": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.7",
    "@angular/common": "^20.3.7",
    "@angular/compiler": "^20.3.7",
    "@angular/core": "^20.3.7",
    "@angular/forms": "^20.3.7",
    "@angular/platform-browser": "^20.3.7",
    "@angular/router": "^20.3.7",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "ng-zorro-antd": "^20.3.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.7",
    "@angular/cli": "^20.3.7",
    "@angular/compiler-cli": "^20.3.7",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "21.0.0",
    "eslint": "^9.39.1",
    "husky": "^9.0.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "less": "^4.2.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.4"
  }
}
